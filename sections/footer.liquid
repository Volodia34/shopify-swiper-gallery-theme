{{ 'section-footer.css' | asset_url | stylesheet_tag }}

<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-content">
      {%- if section.settings.footer_menu.links.size > 0 -%}
        <div class="footer-block">
          <h3 class="footer-title">{{ section.settings.menu_title }}</h3>
          <ul class="footer-link-list">
            {%- for link in section.settings.footer_menu.links -%}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endif -%}

      <div class="footer-block">
        <h3 class="footer-title">{{ section.settings.info_title }}</h3>
        <div class="footer-info-text">
          {{ section.settings.store_info }}
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="footer-copyright">
        <small>&copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url }}.</small>
      </div>
      {%- if section.settings.show_payment_icons -%}
        <div class="footer-payment-icons">
          {{- payment_type_svg_tags -}}
        </div>
      {%- endif -%}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "text",
      "id": "menu_title",
      "label": "Menu Title",
      "default": "Quick Links"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "info_title",
      "label": "Info Block Title",
      "default": "Our Store"
    },
    {
      "type": "richtext",
      "id": "store_info",
      "label": "Store Information",
      "default": "<p>Use this text to share information about your brand with your customers.</p>"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    }
  ]
}
{% endschema %}
