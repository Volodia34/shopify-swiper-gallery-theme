{{ 'section-footer.css' | asset_url | stylesheet_tag }}

<footer class="site-footer-wrapper">
  <div class="footer-container">
    {%- if section.settings.footer_menu.links.size > 0 -%}
      <div class="footer-block footer-menu">
        <h4 class="footer-title">{{ 'footer.quick_links' | t }}</h4>
        <ul class="footer-link-list">
          {%- for link in section.settings.footer_menu.links -%}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {%- endfor -%}
        </ul>
      </div>
    {%- endif -%}

    <div class="footer-block footer-info">
      <h4 class="footer-title">Our Store</h4>
      <p>Here you can place a short information about your store, address or contact details.</p>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="footer-copyright">
      &copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url }}.
    </div>
    {%- if section.settings.show_payment_icons -%}
      <div class="footer-payment-icons">
        {{- payment_type_svg_tags -}}
      </div>
    {%- endif -%}
  </div>
</footer>

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer menu",
      "default": "footer"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    }
  ]
}
{% endschema %}
