{{ 'section-header.css' | asset_url | stylesheet_tag }}

<header class="site-header">
  <div class="header-container">
    <div class="header-left">
      {%- if section.settings.logo != blank -%}
        <a href="{{ routes.root_url }}" class="header-logo">
          {{ section.settings.logo | image_url: width: 200 | image_tag:
          loading: 'lazy',
          alt: section.settings.logo.alt | default: shop.name
          }}
        </a>
      {%- else -%}
        <a href="{{ routes.root_url }}" class="header-shop-name">
          {{ shop.name }}
        </a>
      {%- endif -%}
    </div>

    <div class="header-center">
      <nav class="header-nav">
        <ul class="header-nav-list">
          {%- for link in section.settings.main_menu.links -%}
            <li class="header-nav-item">
              <a href="{{ link.url }}" class="header-nav-link">{{ link.title }}</a>
            </li>
          {%- endfor -%}
        </ul>
      </nav>
    </div>

    <div class="header-right">
      <a href="{{ routes.cart_url }}" class="header-cart-icon">
        <span>{{ 'cart.title' | t }}</span>
        <span class="cart-count">({{ cart.item_count }})</span>
      </a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Логотип"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "t:labels.menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
